<ol>
    <% @events.each do |event| %>
        <li class="event">
            <h1><%= link_to event.title, event_path(event) %></h1>
            <h3>Date: <%= event.date %></h3>
            <h3>Place: <%= event.place %></h3>
            <h3>Author: <%= link_to event.author.email, user_path(event.author.id) %></h3>
            <h5>Invited: TODO</h5>
        </li>
    <% end %>
</ol>
